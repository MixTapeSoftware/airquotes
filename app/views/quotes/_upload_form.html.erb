<%# File Upload Form with Drag and Drop %>
<div class="max-w-2xl mx-auto p-6 ">
  <div class="bg-gray-800 rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold mb-4 mt-0 pt-0">Upload Quotes</h2>

    <%# Drag and Drop Zone %>
    <div id="drop-zone" class="border-2 border-dashed border-gray-600 rounded-lg p-8 text-center cursor-pointer hover:border-blue-500 duration-200" data-controller="upload" data-action="dragover->upload#dragOver dragleave->upload#dragLeave drop->upload#drop">
      <div class="space-y-4">
        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
          <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        <div class="text-gray-300">
          <p class="font-medium">Drag and drop your quote document here</p>
          <p class="text-sm">or</p>
          <label class="mt-2 inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer">
            Browse Files
            <input type="file" class="hidden" data-upload-target="fileInput" data-action="change->upload#handleFiles">
          </label>
        </div>
      </div>
      <div id="upload-progress" class="hidden mt-4">
        <div class="w-full bg-gray-700 rounded-full h-2.5">
          <div class="bg-blue-600 h-2.5 rounded-full" style="width: 0%"></div>
        </div>
      </div>
    </div>


    <div class="mt-8">
      <h3 class="text-lg font-semibold mb-4">Uploaded Files</h3>
      <div id="uploaded-files" class="space-y-2">
        <% @quotes.each do |quote| %>
        <div id="quote-<%= quote.id %>" class="flex items-center justify-between p-3 bg-gray-700 rounded-lg">
          <div class="flex items-center space-x-3">
            <%= button_to quote_path(quote), 
      method: :delete,
      class: "text-red-400 hover:text-red-200 delete-quote-link bg-transparent border-0 p-0 cursor-pointer",
      data: { 
        action: "upload#deleteQuote",
        quote_id: quote.id
      } do %>
            <i class="fa fa-times-circle fa-lg"></i>
            <% end %>
            <div class="flex flex-col">
              <span class="text-md text-gray-200"><%= quote.name %></span>
            </div>
          </div>
          <span class="text-sm text-gray-400"><%= quote.created_at.to_date %></span>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>