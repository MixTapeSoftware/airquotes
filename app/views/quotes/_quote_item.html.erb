<%# Quote Item Partial - Used in both the upload form and the quotes list %>
<div id="quote-<%= quote.id %>" class="flex items-center justify-between p-3 text-gray-900">
    <div class="flex items-center space-x-3 min-w-0 flex-1">
        <div class="flex flex-col">
            <div class="max-w-lg overflow-hidden text-ellipsis">
                <h3 class="text-sm font-medium text-gray-900"><%= quote.name %></h3>
                <p class="text-sm text-gray-500">Uploaded <%= time_ago_in_words(quote.created_at) %> ago</p>
            </div>
        </div>
    </div>
</div>